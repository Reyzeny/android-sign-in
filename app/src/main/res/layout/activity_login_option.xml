<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    <LinearLayout


        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="@android:color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/loginoption_tvImage"
                android:layout_width="400dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_logo"
                android:layout_centerHorizontal="true"/>




            <Button
                android:id="@+id/loginoption_btnFbSignIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:text="@string/com_facebook_loginview_log_in_button_long"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:drawableLeft="@drawable/com_facebook_button_icon"
                android:drawablePadding="15dp"
                android:background="@drawable/fb_btn_bg"
                android:layout_below="@id/loginoption_tvImage"
                android:layout_margin="10dp"/>





        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/loginoption_btnGSignIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:text="@string/common_signin_button_text_long"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:drawableLeft="@drawable/googleg_standard_color_18"
                android:drawablePadding="15dp"
                android:background="#db3236"

                android:layout_margin="10dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerInParent="true"
                android:background="@android:color/darker_gray"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@android:color/white"
                android:text="OR"
                android:textStyle="bold"
                android:textColor="@android:color/darker_gray"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/loginoption_SignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign up with email or phone number"
                android:textStyle="bold"
                android:textColor="@color/link_blue"
                android:layout_centerHorizontal="true"
                android:padding="10dp"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/loginoption_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account? Log in."
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:padding="5dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"/>


    </LinearLayout>
</ScrollView>